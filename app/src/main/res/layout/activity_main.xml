<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.com.morningtec.MainActivity">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cn.com.morningtec.loadingview.LoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <cn.com.morningtec.loadingview.LoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <cn.com.morningtec.loadingview.LoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <cn.com.morningtec.loadingview.LoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <cn.com.morningtec.loadingview.LoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <cn.com.morningtec.loadingview.LoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动loading动画" />

    <cn.com.morningtec.fontsizeselector.FontSizeSelectorView
        android:id="@+id/font_size_selector"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字进入动画" />

    <LinearLayout
        android:id="@+id/ll_container2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
